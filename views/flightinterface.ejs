<style>
    .maincontainer{
      display: flex;
      justify-content: center;
      background-color: #30336b;
      height: 100vh;
    }
    .root{
      width: 1300PX;
      height: auto;
      background: #fff;
      padding: 10px;
    }
    .heading{
      color:#4834d4;
      font-size:32px;
      font-weight:bold; 
      font-family: oxygen;
      display: flex;
      justify-content: center;
      padding: 5px;
    }
  .rowgap{
     margin-top: 40px; 
  }
    
</style>

<html>
<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
            
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script>
  $(document).ready(function(){
    $('select').formSelect();
  }); 

  $(document).ready(function(){
    $('.timepicker').timepicker();
  });
          
</script>
<script src="/Javascripts/project.js"></script>
    
</head>
<body>


  <form action="/flight/addnewrecord" method="post" enctype="multipart/form-data">

<div class="maincontainer">
    <div class="root">
        <div class="heading">
             <span><img src="/images/air india.png" width="50"></span>Flight Enquiry System 
        </div>
        <hr>
        <div class="row">
            <div class="col s6">
                <div class="input-field">
                    <i class="material-icons prefix">airplanemode_active</i>
                    <input id="icon_fid"  name="flightid" type="text" class="validate">
                    <label for="icon_fid">Flight Id</label>
                  </div>
            </div>
            <div class="col s6">
                <div class="input-field">
                    <i class="material-icons prefix">business</i>
                     <input id="icon_com"  name="companyname" type="text" class="validate">
                    <label for="icon_com">Comapany Name</label>
                  </div>
            </div>
        </div>

        <div class="row">
            <div class="col s3">

              <div class="input-field">
                <i class="material-icons prefix">flight_takeoff</i>
                    <select name="sourcestate" id="sourcestate">
                    <option value="" disabled selected>choose your state</option>
                  </select>
                    <label>Source State</label>
                </div>
            </div>
                    <div class="col s3">
                      <div class="input-field">
                        <i class="material-icons prefix">flight_takeoff</i>
                            <select name="sourcecity" id="sourcecity">
                            <option value="" disabled selected>choose your city</option>
                          </select>
                            <label>Source city</label>
                        </div>
                    </div>

              <div class="col s3">
                <div class="input-field">
                    <i class="material-icons prefix">flight_land</i>
                    <select name="destinationstate" id="destinationstate">
                      <option value="" disabled selected>choose your state</option>
                  </select>
                  <label>Destination State</label>
                  </div>
          </div>

                    <div class="col s3">
                        <div class="input-field">
                            <i class="material-icons prefix">flight_land</i>
                            <select name="destinationcity" id="destinationcity">
                              <option value="" disabled selected>choose your city</option>
                          </select>
                          <label>Destination city</label>
                          </div>
                    </div>
              
      </div>
      <div class="row">
        <div class="col s3">
          
        <div class="input-field">
          <select name="status">
            <option value="" disabled selected>Choose your option</option>
            <option >Non Stop</option>
            <option >With Stop</option>
          </select>
          <label>Status</label>
        </div>
      </div>

      <div class="col s3" style="display:flex ;flex-direction:row;justify-content:space-around;align-items: center;">
       <p>
          <label>
            <input  name="fclass" value="Business" type="checkbox" />
            <span>Business</span>
          </label>
        </p>

        <p>
          <label>
            <input name="fclass" values="Economy" type="checkbox" />
            <span>Economy</span>
          </label>
        </p>
        <p>
          <label>
            <input name="fclass" values="Executive" type="checkbox" />
            <span>Executive</span>
          </label>
        </p>
        </div>

      <div class="col s3">
          <div class="input-field">
              <i class="material-icons prefix">access_time</i>
              <input id="icon_sourcetime"  name="sourcetime" type="text" class="timepicker">
              <label for="icon_sourcetime">Source Timing</label>
            </div>
      </div>
    <div class="col s3">
      <div class="input-field">
        <i class="material-icons prefix">access_time</i>
        <input id="icon_destime"  name="destinationtime" type="text" class="timepicker">
        <label for="icon_destime">Destinantion  Timing</label>
      </div>
    </div>
  </div>
  
  <div class="row">
  <div class="col s12" style="display:flex ;flex-direction:row;justify-content:space-around;align-items: center;">
    <p>
       <label>
         <input name="days" value="sunday" type="checkbox" />
         <span>Sunday</span>  
       </label>
     </p>

     <p>
      <label>
        <input name="days" value="monday" type="checkbox" />
        <span>Monday</span>  
      </label>
    </p>

    <p>
      <label>
        <input name="days" value="tuesday" type="checkbox" />
        <span>Tuesday</span>  
      </label>
    </p>

    <p>
      <label>
        <input name="days" value="wednesday" type="checkbox" />
        <span>Wednesday</span>  
      </label>
    </p>

    <p>
      <label>
        <input name="days" value="thursday" type="checkbox" />
        <span>Thursday</span>  
      </label>
    </p>

    <p>
      <label>
        <input name="days" value="friday" type="checkbox" />
        <span>Friday</span>  
      </label>
    </p>

    <p>
      <label>
        <input name="days" value="saturday" type="checkbox" />
        <span>Saturday</span>  
      </label>
    </p>

     </div>
    </div>

    <div class="row">
      <div class="col s12">
        <div class="file-field input-field">
          <div class="btn">
            <span>File</span>
            <input type="file" name="logo">
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="col s4" style="display:flex;justify-content:center;">
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
    </div>

    <div class="col s4" style="display:flex;justify-content:center;font-size: 24;font-weight: bold;">
    <%=msg %>
    </div>
    

    <div class="col s4" style="display:flex;justify-content:center;">
      <button class="btn waves-effect waves-light" type="reset" name="action">reset
        <i class="material-icons right">remove</i>
      </button>
    </div>
  </div>
</div>
</div>
</form>
  </body>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
            
</html>