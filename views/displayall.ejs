<html>
    <style>
        .maincontainer{
          display: flex;
          justify-content: center;
          align-items: center;
          background-color: rgb(1, 30, 98);
          height: 100vh;
        }
        .root{
          width: 1300PX;
          height: auto;
          background: #bcdffe;
          font-family: Bitter;
          border-radius: 10px;
          padding: 10px;
        }
        .heading{
          color:#371885;
          font-size:32px;
          font-weight:bold; 
          font-family: Bitter;
          display: flex;
          justify-content: center;
          padding: 5px;
        }
      .rowgap{
         margin-top: 40px; 
      }
        
    </style>
    
    <html>
    <head>
        <!--Import Google Icon Font-->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        
        <!-- Compiled and minified CSS -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    
        <!-- Compiled and minified JavaScript -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
      <div class="maincontainer">
        <div class="root">
            <div class="heading">
                <span><img src="/images/air india.png" width="50"></span>Flight Enquiry System 
           </div>
            <table class="striped">
                <thead>
                  <tr>
                      <th>Flight ID</th>
                      <th>CompanyName</th>
                      <th>Source</th>
                      <th>Destination</th>
                      <th>Type</th>
                      <th>Class</th>
                      <th>Days</th>
                      <th>Update</th>
               </tr>
                </thead>
                <tbody>
                    <% data.map((item)=>{ %>
                <tr>
                    <td><%=item.flightid %></td>
                    <td><%=item.companyname %><br>
                    <a href='/flight/showpicture?flightid=<%=item.flightid%>&companyname=<%=item.companyname %>&logo=<%=item.logo %>'>
                    <img src="/images/<%=item.logo%>" width="40">
                     </a>
                    </th>
                    <td><%=item.sc %><br><%=item.sourcetimings %></td>
                    <td><%=item.dc %><br><%=item.destinationtimings %></td>
                    <td><%=item.status %></td>
                    <td><%=item.flightclass %></td>
                    <td><%=item.days %></td>
                    <td><a href="/flight/displaybyid?fid=<%=item.flightid %>">Update</a></td>
                </tr>
                <% }) %>
                  
                </tbody>
              </table>
                    
        </div>

      </div>          
    </head> 
</html>